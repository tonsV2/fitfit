= form_for(@muscle) do |f|
  - if @muscle.errors.any?
    #error_explanation
      %h2
        = pluralize(@muscle.errors.count, "error")
        prohibited this muscle from being saved:
      %ul
        - @muscle.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :muscle_group
    %br/
    = f.collection_select :muscle_group_id, MuscleGroup.all, :id, :name
  .actions
    = f.submit
