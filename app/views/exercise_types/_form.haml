= form_for(@exercise_type) do |f|
  - if @exercise_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@exercise_type.errors.count, "error")
        prohibited this exercise_type from being saved:
      %ul
        - @exercise_type.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
