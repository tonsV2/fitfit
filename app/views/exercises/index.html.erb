<h1>Listing exercises</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Preparation</th>
    <th>Execution</th>
    <th>Comment</th>
    <th>Url</th>
    <th>Exercise type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @exercises.each do |exercise| %>
  <tr>
    <td><%= exercise.name %></td>
    <td><%= exercise.description %></td>
    <td><%= exercise.preparation %></td>
    <td><%= exercise.execution %></td>
    <td><%= exercise.comment %></td>
    <td><%= exercise.url %></td>
    <td><%= exercise.exercise_type.try(:name) %></td>
    <td><%= link_to 'Show', exercise %></td>
    <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
    <td><%= link_to 'Destroy', exercise, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

